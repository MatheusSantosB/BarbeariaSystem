                       style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.35">
            <VBox spacing="15" style="-fx-background-color: #ECF0F1;">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="Cadastro de Profissional"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="120"/>
                        <ColumnConstraints prefWidth="250"/>
                    </columnConstraints>

                    <Label text="Nome:*" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtNome" promptText="Nome completo"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Especialidade:*" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtEspecialidade" promptText="Ex: Barba, Cabelo"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Telefone:*" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtTelefone" promptText="(XX) XXXXX-XXXX"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <CheckBox fx:id="chkAtivo" text="Ativo" selected="true"
                              GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>

                <Separator/>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnSalvar" text="ðŸ’¾ SALVAR" onAction="#handleSalvar"
                            style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Button fx:id="btnNovo" text="ðŸ†• NOVO" onAction="#handleNovo"
                            style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Button fx:id="btnExcluir" text="ðŸ—‘ï¸ EXCLUIR" onAction="#handleExcluir"
                            style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="âœ… ATIVAR" onAction="#handleAtivar"
                            style="-fx-background-color: #2ECC71; -fx-text-fill: white;"/>
                    <Button text="ðŸš« DESATIVAR" onAction="#handleDesativar"
                            style="-fx-background-color: #E67E22; -fx-text-fill: white;"/>
                </HBox>

                <Separator/>

                <Label text="Buscar Profissional" style="-fx-font-weight: bold;"/>
                <HBox spacing="10">
                    <TextField fx:id="txtBusca" promptText="Digite o nome..." prefWidth="200"/>
                    <Button text="ðŸ”" onAction="#handleBuscar"/>
                    <Button text="ðŸ‘ï¸ Ativos" onAction="#handleBuscarAtivos"/>
                    <Button text="ðŸ§¹" onAction="#handleLimparBusca"/>
                </HBox>

                <VBox spacing="5" style="-fx-background-color: #D5DBDB; -fx-background-radius: 5;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <Label fx:id="lblTotalProfissionais" text="Total: 0"/>
                    <Label fx:id="lblStatus" text="Status: Pronto"/>
                </VBox>
            </VBox>

            <VBox spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <Label text="Profissionais Cadastrados" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <TableView fx:id="tabelaProfissionais" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
                        <TableColumn fx:id="colEspecialidade" text="Especialidade" prefWidth="150"/>
                        <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="150"/>
                        <TableColumn fx:id="colAtivo" text="Status" prefWidth="80"/>
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT">
                    <Button text="â†©ï¸ VOLTAR" onAction="#handleVoltar"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>